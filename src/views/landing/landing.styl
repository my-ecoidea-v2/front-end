@import "../../assets/stylesheets/master.styl"
@import "../home.styl"

.session
  z-index 100
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  box-shadow 0 0 2px 3px #e3e3e3
  background-color: #fefefe
  padding-top: 10px
  .idea-exemple
    z-index 10
    overflow-y scroll
    position fixed
    top 15px
    left (100vw / 12 * 4)
    padding: 15px
    height (100vh / 4 * 3)
    border: 2px solid #eeeeee
    border-radius: 10px
  svg 
    position fixed
    bottom 0
    left 0
    width 100vw
    z-index 100
  .icon
    position fixed
    top calc((100vh / 3) - 100px)
    left 0
    width (100vw / 12 * 4)
    text-align: center
    line-height: 50px;
    img 
      width (100vw / 12 * 2)
      vertical-align: middle
  .title
    position fixed
    top calc((100vh / 3) - 100px)
    right 0
    width (100vw / 12 * 4)
    text-align: center
    line-height: 50px;
    padding: 25px
    h1
      color app-color-dark
      font-size: 2em
      display: inline-block
      vertical-align: middle
      margin 0
    p
      color app-color-dark
      font-size: 1.5em
      display: inline-block
      vertical-align: middle
      margin 0
  .session-box
    z-index 1000
    text-align: center
    margin-top: 10px
    position fixed
    width 100vw;
    bottom 25px;
    ul 
      padding:0;
      margin:0;
      list-style-type:none;
      vertical-align: middle;
      height 75px
      li 
        height: 50px
        margin-top: 10px;
        text-align: center;
        line-height:50px
        box-sizing: border-box;
        position: relative;
        vertical-align: middle;
        a
          text-decoration:none;
          color: app-color
          font-size: 20px;
          font-family: Arial, Helvetica, sans-serif;
    p
      font-size: 1.25em
      color: #fefefe

#login
  border: 2px solid #eeeeee;
  border-radius: 50px;  
  color #fefefe
  font-size: 1.5em

#register
  border: 2px solid #fefefe
  color: app-color;
  background-color: #fefefe
  font-size: 1.5em
  border-radius: 50px;