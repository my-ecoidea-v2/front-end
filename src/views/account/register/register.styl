@import "../../../assets/stylesheets/master.styl"
@import "../account.styl"

.account-form
  margin-top: 25px
  padding: 25px
  width: 100%
  text-align: center
  background-color: #fefefe
  box-shadow: 0px 0px 5px 2px #eeeeee
  img 
    height 75px
  h2
    font-size: 2em
    font-weight: bold
  #error
    color red
    text-align: left
    margin-left: 5px
  input 
    height 40px
    border: 2px solid #eeeeee
    border-radius: 10px
    background-color: #fefefe
    width: 100%
    margin-bottom 5px
    padding: 10px
    box-sizing: border-box
  .btn
    background-color app-color
    color #fefefe
    font-weight: bold
  .error
    color red
    border-color: red
  .valid
    color app-color
    border-color: app-color
  #key
    width: 25%