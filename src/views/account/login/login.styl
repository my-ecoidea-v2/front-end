.footer
  position fixed
  height 30px
  line-height: 25px
  width 100vw
  bottom 0px
  text-align: center

#question
  margin: 0
  margin-bottom: 10px
  font-size: .9em
  text-decoration: underline
  color app-color

.error 
  border 3px dotted red !important