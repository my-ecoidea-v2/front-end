@import "../assets/stylesheets/master.styl"

.content
  margin-top: 80px !important

#wave
  svg
    position fixed
    bottom 0
    left 0
    width: 100vw
    z-index: -1
    opacity .75

.search
  line-height: 45px
  text-align: center
  padding: 0 !important;
  margin-bottom: 25px;
  position fixed
  top: 15px
  z-index 2
  #search-input
    height 45px
    display inline-block
    vertical-align: middle
    border: 2px solid app-color
    box-sizing: border-box
    border-top-left-radius: 5px
    border-bottom-left-radius: 5px
    width calc(((100vw / 12) * 6) - 82px)
    padding-left: 15px
    background-color: white
  #search-btn
    display inline-block
    background-color: app-color
    border-top-right-radius: 5px
    border-bottom-right-radius: 5px
    height 45px
    width 45px
    line-height: 50px
    vertical-align: middle
    cursor pointer
    position relative
    svg 
      height: 30px
      position relative
      display inline-block
      line-height 50px
      margin: 5.5px
  #search-btn:hover
    svg 
      transform: scale(.8)
      fill: app-color;

.stats
  height 100vh
  position fixed
  right 0
  text-align: center
  .items
    height 100px
    padding-top: 25px
    padding-bottom: 25px
    ul 
      padding:0;
      margin:0;
      list-style-type:none;
      vertical-align: middle;
      text-align: center
      height 50px
      li 
        display inline-block
        height: 50px
        width: 50px
        text-align: center;
        line-height: 50px
        box-sizing: border-box;
        vertical-align: middle;
        border: 4px solid app-color
        border-radius: 15px
        background-color: white
        margin-left: 20px
        margin-right: 20px
        cursor pointer
  .stats-content
    .numbers
      display: inline-block
      font-size: 4em
      color app-color
      font-weight: bold
      text-align: center
      white-space pre-line
      line-height: 30px
      margin: 30px
      span 
        font-size: 0.5em
        font-weight: normal
  #logo
    img 
      position absolute
      opacity .1
      width 350px
      top: 50px
      left calc(50% - 175px)
      z-index: -1
  .footer
    position absolute
    bottom 25px;
    right 0
    height 50px
    width 350px

@media screen and (max-width : 768px)
  .search
    #search-input
      width calc(((100vw / 12) * 11) - 45px)