@import "../../../assets/stylesheets/master.styl"

.box-create
  margin 0
  margin-top: 35px
  padding: 35px
  width: 100%
  text-align: center
  background-color: #fefefe
  box-shadow: 0px 0px 5px 2px #eeeeee
  .dropdown
    text-align: left
    padding: 0
    .dropdown-toggle::after 
      display: inline-block;
      width: 0;
      height: 0;
      margin-left: 0;
      vertical-align: middle;
      content: "";
      border-top: .3em solid;
      border-right: .3em solid transparent;
      border-bottom: 0;
      border-left: .3em solid transparent;
    #dropdownMenuButton
      box-shadow: 2px 2px 5px 2px #eeeeee
      height 35px
      padding: 0
      padding-right: 35px 
      border-radius: 5px
      background-color: #fefefe
      font-family: Arial, Helvetica, sans-serif
      border: none
      #type-text
        display inline-block
        background-color: app-color
        margin: 0
        height 35px
        border-top-left-radius: 5px
        border-bottom-left-radius: 5px
        padding: 10px
        line-height: 15px
        color: #fefefe
        font-weight: bold
      #type
        display inline-block
        margin: 0
        height 35px
        border-top-right-radius: 5px
        border-bottom-right-radius: 5px
        padding: 10px
        line-height: 15px
        color: app-color-dark
        font-weight: bold
        box-sizing: border-box
    .dropdown-menu
      ul
        padding 0
        margin 0
        list-style-type none
        li
          height 35px
          width 100%
          position relative
          text-align: center
          line-height: 35px
          border-radius: 5px
        li:hover
          background-color: #eeeeee
        .active
          background-color: app-color
          color: #fefefe
        .active:hover
          background-color: #A2E58B