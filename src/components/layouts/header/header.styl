@import "../../../assets/stylesheets/master.styl"

navbar-height = 65px
navbar-height-mobile = 40px

.navbar
  z-index 100
  height navbar-height
  width 100vw
  background-color #fefefe
  margin 0
  position fixed
  top 0
  left 0
  box-shadow 0 0 2px 3px #e3e3e3
  .nav-box
    height navbar-height
    text-align center
    display flex
    flex-direction column-reverse
    transition: all .5s
    border-radius: 10px
    ul
      padding 0
      margin 0
      list-style-type none
      li
        height navbar-height
        width 100%
        position relative
        img
          margin-top 10px
          height (navbar-height - 35px)
        span
          display block
          margin 0
          color app-color
          margin-bottom: 10px
          
.nav-box:hover
   box-shadow inset 0 0 0 5vw #eeeeee

#logo
  height 50px


@media screen and (max-width 768px)
  .navbar
    height navbar-height-mobile
    .nav-box
      height navbar-height-mobile
      ul
        li
          height navbar-height-mobile
          img 
            height (navbar-height-mobile - 10px)