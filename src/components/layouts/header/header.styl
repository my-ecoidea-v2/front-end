@import "../../../assets/stylesheets/master.styl"

navbar-height = 50px

@media screen and (max-width : 768px)
  .menu
    display: block !important
    z-index 100
    margin 0
    position fixed
    bottom 0
    text-align: center
    background-color: app-color;
    height 65px;
    width: 100vw;
    padding: 0;
    ul
      padding 0
      margin 0
      list-style-type none
      width 100%
      height 65px;
      text-align: center
      #logo
        margin 0;
        height 65px;
        width: 60px;
        background-color: app-light;
        border-radius: 0 !important;
        padding: 0
        line-height: 65px
        margin-left: 10px
        img 
          display inline-block
          height 45px
      li
        width calc((100vw / 5) * 1 - 10px)
        height calc((100vw / 5) * 1 - 10px)
        position relative
        line-height: calc((100vw / 5) * 1)
        padding: 7.5px;
        margin: 5px
        margin-top: -5px
        background-color: app-light;
        border-radius: 15px !important;
        transition: .5s all;
        float left
        svg
          display inline-block !important
          color white;
          height 35px;
        border-radius: 0;
      li::before
        content ' '
        width: 5px;
        border-radius: 0px 15px 15px 0px;
        background-color: white
        position absolute
        height 55px;
        top 0
        left -10px;
        transform: scale(0)
        transition: .2s ease-in-out;;
      li:hover
        background-color: white;
      li:hover::before
        content ' '
        transform: scale(1)

