@import "../../../assets/stylesheets/master.styl"

.session
  z-index 100
  position fixed
  bottom 0
  left 0
  width 100%
  height 175px
  box-shadow 0 0 2px 3px #e3e3e3
  background-color: #fefefe
  padding-top: 10px
  .title
    text-align: center
    line-height: 50px;
    height 50px
    img 
      height 45px
      vertical-align: middle
    p
      color app-color-dark
      font-size: 2em
      display: inline-block
      vertical-align: middle
      margin 0
  .session-box
    text-align: center
    margin-top: 10px
    ul 
      padding:0;
      margin:0;
      list-style-type:none;
      vertical-align: middle;
      height 75px
      li 
        height: 50px
        margin-top: 10px;
        text-align: center;
        line-height:50px
        box-sizing: border-box;
        position: relative;
        vertical-align: middle;
        a
          text-decoration:none;
          color: app-color
          font-size: 20px;
          font-family: Arial, Helvetica, sans-serif;
    p
      font-size: 1.25em
      color: app-color-dark

#login
  border: 2px solid #eeeeee;
  border-radius: 50px;  
  color app-color
  font-size: 1.5em
  
#register
  border: 2px solid app-color
  border-radius: 50px;
  color: app-color
  font-size: 1.5em

#register:hover
  background-color: app-color
  color: #ffffff;